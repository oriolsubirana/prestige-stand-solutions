---
import MainLayout from '../layouts/main-layout.astro'
import ContactInfo from '../components/contact-box.tsx'
import ContactForm from '../components/contact-form.tsx'
---


<MainLayout title = 'Prestige Stand Solutions Contact Us'>

  <!-- Banner Section -->

  <section class="w-full h-[20vh] flex justify-center items-end">
    <div class="py-[30px] lg:py-[41px] px-[60px] lg:px-[30px] flex flex-col justify-center items-center bg-white gap-2.5">
      <h1 class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-dm capitalize text-primary-200 ">Contact Us</h1>
      <p class="text-base lg:text-[22px] lg:leading-[33px] tracking-tight font-jost text-text-gray"> <a href="/">Home</a> / Contact</p>
    </div>
  </section>

  <!-- Intro Section -->

	<section class="lg:max-w-[1200px] flex flex-col gap-8 lg:gap-10 px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[50px]">
    <!-- main section -->
    <div class="grid grid-cols-1 gap-[55px] pt-10 lg:grid-cols-3 place-content-center">
      <ContactInfo />
      <ContactForm />
    </div>
	</section>

 

</MainLayout>

<style>

  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
      display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
  }

</style>